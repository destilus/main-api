    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'main-api'",
      "cargo": {
        "args": ["test", "--no-run", "--bin=main-api", "--package=main-api"],
        "filter": {
          "name": "main-api",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
